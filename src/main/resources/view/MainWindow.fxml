<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="BizBook" minWidth="750" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/BizBook.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <HBox fx:id="contactListPane" styleClass="pane" VBox.vgrow="ALWAYS" spacing="10">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
          <!-- Contact list -->
          <VBox fx:id="personList" styleClass="pane-with-border" minWidth="400" prefWidth="400">
            <StackPane fx:id="searchBoxPlaceholder" VBox.vgrow="NEVER" styleClass="pane-with-border" />
            <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS" />
          </VBox>

          <!-- Contact details panel with fixed height -->
          <VBox fx:id="contactDetails" styleClass="pane-with-border" HBox.hgrow="ALWAYS" maxHeight="Infinity">
            <padding>
              <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <StackPane fx:id="pinContactsPlaceholder" VBox.vgrow="NEVER" minHeight="50" maxHeight="50" />
            <StackPane fx:id="contactDetailsPanelPlaceholder" VBox.vgrow="ALWAYS" />
          </VBox>
        </HBox>

        <!-- Bottom section with fixed heights -->
        <VBox VBox.vgrow="NEVER">
          <StackPane fx:id="resultDisplayPlaceholder" styleClass="pane" minHeight="100" maxHeight="100">
            <padding>
              <Insets top="5" right="10" bottom="5" left="10" />
            </padding>
          </StackPane>

          <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" minHeight="40" maxHeight="40">
            <padding>
              <Insets top="5" right="10" bottom="5" left="10" />
            </padding>
          </StackPane>

          <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" minHeight="20" maxHeight="20" />
        </VBox>
      </VBox>
    </Scene>
  </scene>
</fx:root>
